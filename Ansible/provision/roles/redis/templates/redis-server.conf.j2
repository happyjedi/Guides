#!upstart
description "Redis Server"

env USER={{ user }}

start on runlevel [2345]
stop on runlevel [016]

respawn
exec start-stop-daemon --start --make-pidfile --pidfile {{ pid_directory }}/redis.pid --chuid $USER --exec /usr/local/bin/redis-server /etc/redis/redis.conf >> {{ log_directory }}/redis.log 2>&1